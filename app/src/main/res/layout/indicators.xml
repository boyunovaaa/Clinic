<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@drawable/rounded_bottom_corners"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/heart"
        android:layout_width="40dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintEnd_toEndOf="@+id/top"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/dog"
        android:layout_width="40dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintEnd_toStartOf="@+id/heart"
        app:layout_constraintHorizontal_bias="0.474"
        app:layout_constraintStart_toStartOf="@+id/top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/dog" />


    <ImageView
        android:id="@+id/settings"
        android:layout_width="40dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/top"
        app:layout_constraintEnd_toEndOf="@+id/top"
        app:layout_constraintHorizontal_bias="0.539"
        app:layout_constraintStart_toEndOf="@+id/heart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988"
        app:srcCompat="@drawable/settings" />

    <ImageView
        android:id="@+id/circular_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/rounded_image_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/cat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <EditText
        android:id="@+id/agecat"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:background="@drawable/edittext_bg_rounded"
        android:ems="10"
        android:fontFamily="@font/robotomedium"
        android:gravity="start|center_vertical"
        android:hint="@string/ageclara"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/circular_image"
        app:layout_constraintTop_toBottomOf="@+id/namecat"
        app:layout_constraintVertical_bias="0.026"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/namecat"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:background="@drawable/edittext_bg_rounded"
        android:ems="10"
        android:fontFamily="@font/robotomedium"
        android:gravity="start|center_vertical"
        android:hint="@string/clara"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="14sp"

        tools:ignore="LabelFor"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="34dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="390dp"
        android:layout_height="1sp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circular_image"
        app:layout_constraintVertical_bias="0.072" />

    <TextView
        android:id="@+id/indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:text="@string/indicators"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintVertical_bias="0.026" />

    <View
        android:id="@+id/rounded_square_view"
        android:layout_width="340dp"
        android:layout_height="291dp"
        android:background="@drawable/rounded_square_bg_blue_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicators"
        app:layout_constraintVertical_bias="0.094" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:text="@string/temperature"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rounded_square_view"
        app:layout_constraintEnd_toEndOf="@+id/rounded_square_view"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="@+id/rounded_square_view"
        app:layout_constraintTop_toTopOf="@+id/rounded_square_view"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/temperatureAnswer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rounded_square_view"
        app:layout_constraintEnd_toEndOf="@+id/rounded_square_view"
        app:layout_constraintHorizontal_bias="0.871"
        app:layout_constraintStart_toStartOf="@+id/rounded_square_view"
        app:layout_constraintTop_toTopOf="@+id/rounded_square_view"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/pressureAnswer"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rounded_square_view"
        app:layout_constraintEnd_toEndOf="@+id/rounded_square_view"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="@+id/rounded_square_view"
        app:layout_constraintTop_toTopOf="@+id/rounded_square_view"
        app:layout_constraintVertical_bias="0.226" />

    <TextView
        android:id="@+id/heartRateAnswer"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rounded_square_view"
        app:layout_constraintEnd_toEndOf="@+id/rounded_square_view"
        app:layout_constraintHorizontal_bias="0.785"
        app:layout_constraintStart_toStartOf="@+id/rounded_square_view"
        app:layout_constraintTop_toTopOf="@+id/rounded_square_view"
        app:layout_constraintVertical_bias="0.405" />

    <TextView
        android:id="@+id/breathAnswer"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rounded_square_view"
        app:layout_constraintEnd_toEndOf="@+id/rounded_square_view"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="@+id/rounded_square_view"
        app:layout_constraintTop_toTopOf="@+id/rounded_square_view"
        app:layout_constraintVertical_bias="0.565" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:text="@string/pressure"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rounded_square_view"
        app:layout_constraintEnd_toEndOf="@+id/rounded_square_view"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="@+id/rounded_square_view"
        app:layout_constraintTop_toTopOf="@+id/rounded_square_view"
        app:layout_constraintVertical_bias="0.226" />

    <TextView
        android:id="@+id/heartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:text="@string/heartRate"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rounded_square_view"
        app:layout_constraintEnd_toEndOf="@+id/rounded_square_view"
        app:layout_constraintHorizontal_bias="0.062"
        app:layout_constraintStart_toStartOf="@+id/rounded_square_view"
        app:layout_constraintTop_toTopOf="@+id/rounded_square_view"
        app:layout_constraintVertical_bias="0.405" />

    <TextView
        android:id="@+id/breath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/robotomedium"
        android:text="@string/breath"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rounded_square_view"
        app:layout_constraintEnd_toEndOf="@+id/rounded_square_view"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="@+id/rounded_square_view"
        app:layout_constraintTop_toTopOf="@+id/rounded_square_view"
        app:layout_constraintVertical_bias="0.565" />

    <Button
        android:id="@+id/change_data"
        android:layout_width="209dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/robotomedium"
        android:text="@string/changePet"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rounded_square_view"
        app:layout_constraintVertical_bias="0.13" />


</androidx.constraintlayout.widget.ConstraintLayout>